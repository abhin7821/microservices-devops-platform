pipeline {
    agent any

    options {
        timestamps()
        skipStagesAfterUnstable()
    }

    environment {
        AWS_REGION = 'us-east-1'
        ECR_REPO = '442122590814.dkr.ecr.us-east-1.amazonaws.com/user-service'
        IMAGE_NAME = 'user-service'
        GIT_REPO = 'https://github.com/abhin7821/microservices-devops-platform.git'
        GIT_BRANCH = 'main'
        GIT_CREDENTIALS = 'github-cred'        // Jenkins ‚Üí Credentials ‚Üí GitHub username+PAT
        AWS_CREDENTIALS = 'jenkins-ecr-user'   // Jenkins ‚Üí Credentials ‚Üí AWS Access/Secret Keys
    }

    stages {

        stage('Checkout from GitHub') {
            steps {
                echo "üîÑ Checking out code from GitHub branch: ${GIT_BRANCH}"
                git branch: "${GIT_BRANCH}",
                    credentialsId: "${GIT_CREDENTIALS}",
                    url: "${GIT_REPO}"
            }
        }

        stage('Build Docker Image') {
            steps {
                echo "üê≥ Building Docker image for ${IMAGE_NAME}"
                sh '''
                    cd app
                    docker build -t $IMAGE_NAME:latest .
                '''
            }
        }

        stage('Login to AWS ECR') {
            steps {
                echo "üîê Logging in to Amazon ECR"
                withAWS(credentials: "${AWS_CREDENTIALS}", region: "${AWS_REGION}") {
                    sh '''
                        aws ecr get-login-password --region $AWS_REGION | docker login --username AWS --password-stdin $ECR_REPO
                    '''
                }
            }
        }

        stage('Push Docker Image to ECR') {
            steps {
                echo "üì¶ Pushing image to ECR with tag: $BUILD_NUMBER"
                withAWS(credentials: "${AWS_CREDENTIALS}", region: "${AWS_REGION}") {
                    sh '''
                        docker tag $IMAGE_NAME:latest $ECR_REPO:$BUILD_NUMBER
                        docker push $ECR_REPO:$BUILD_NUMBER
                    '''
                }
            }
        }

        stage('Update Helm Chart Image Tag') {
            steps {
                echo "üìù Updating Helm values.yaml with new image tag"
                sh '''
                    sed -i "s@tag:.*@tag: $BUILD_NUMBER@" ./helm/user-service/values.yaml
                '''
            }
        }

        stage('Commit & Push Helm Update to GitHub') {
            steps {
                echo "üöÄ Committing Helm chart update back to GitHub"
                sh '''
                    git config user.email "jenkins@ci.com"
                    git config user.name "Jenkins CI"
                    git add ./helm/user-service/values.yaml
                    git commit -m "Auto-update image tag to $BUILD_NUMBER"
                    git push https://$GIT_USERNAME:$GIT_TOKEN@github.com/abhin7821/microservices-devops-platform.git $GIT_BRANCH
                '''
            }
        }

        stage('Trigger ArgoCD Sync') {
            steps {
                echo "üîÅ Syncing ArgoCD application to deploy new image"
                sh '''
                    argocd app sync user-service --grpc-web || echo "‚ö†Ô∏è ArgoCD sync skipped or failed"
                '''
            }
        }
    }

    post {
        success {
            echo "‚úÖ CI/CD pipeline completed successfully!"
        }
        failure {
            echo "‚ùå Pipeline failed. Please check the logs above."
        }
        always {
            echo "üßπ Cleaning up local Docker images..."
            sh 'docker system prune -f || true'
        }
    }
}
